<!-- add-verse.ejs -->
<!DOCTYPE html>
<html>
<%- include("./partials/head.ejs") %>
<body>
	<%- include("./partials/nav.ejs") %>
	<h1>Add your life verse below to share with others</h1>
		<form action="/add-verse" method="POST">
			<input type="text" name="book" placeholder="Book of the Bible" isRequired>
			<br/>
			<input type="text" name="verse" placeholder="chapter: verse(s)" isRequired>
			<br/>
			<input type="text" name="version" placeholder="translation">
			<br/>
			<textarea type="text" name="reading" placeholder="scripture" isRequired></textarea>
			<br/>
			<textarea type="text" name="meaning" placeholder="meaning for you" ></textarea>
			<br/>
 			<input type="submit" value="submit">
		</form>
		<%- include("./partials/foot.ejs") %>
	<script type="text/javascript" src=".js"></script>
</body>
</html>